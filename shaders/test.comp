#version 460
layout (local_size_x = 16, local_size_y = 16, local_size_z = 1) in;

layout (rgba8, binding = 0) uniform writeonly image2D outImage;

void main() {
    ivec2 size = imageSize(outImage);
    ivec2 gid  = ivec2(gl_GlobalInvocationID.xy);
    if (gid.x >= size.x || gid.y >= size.y) return;

    // Normalized UV
    vec2 uv = vec2(gid) / vec2(max(size - 1, ivec2(1)));

    // Simple gradient: red left â†’ blue right, green slight vertical
    vec4 color = vec4(uv.x, uv.y * 0.2, 1.0 - uv.x, 1.0);
    imageStore(outImage, gid, color);
}
